{
    "compilerOptions": {
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "outDir": "./build",
      "target": "es6",
      "rootDir": "./src",
      "typeRoots": [
        "node_modules/@types"
      ],
      "declaration": true,
      "alwaysStrict": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "./build",
      "./node_modules"
    ]
  }